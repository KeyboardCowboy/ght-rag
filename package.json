{
  "name": "ai-document-system",
  "version": "1.0.0",
  "description": "Local AI Document System - Auto-indexing file system monitoring with AI-powered search",
  "main": "indexing-service/daemon.js",
  "scripts": {
    "start": "node indexing-service/daemon.js",
    "dev": "nodemon indexing-service/daemon.js",
    "ingest": "node indexing-service/src/cli/ingest.js",
    "ingest:file": "node indexing-service/src/cli/ingest.js file",
    "ingest:directory": "node indexing-service/src/cli/ingest.js directory",
    "ingest:status": "node indexing-service/src/cli/ingest.js status",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "ddev:start": "ddev start",
    "ddev:stop": "ddev stop",
    "ddev:restart": "ddev restart",
    "ddev:exec": "ddev exec",
    "setup": "npm install && ./scripts/setup-env.sh"
  },
  "keywords": [
    "ai",
    "document",
    "search",
    "vector",
    "postgresql",
    "pgvector",
    "file-watcher",
    "document-processing"
  ],
  "author": "Chris",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "pg": "^8.11.3",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "bull": "^4.12.2",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
